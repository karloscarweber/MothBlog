{{!< moth}}

  {{#post}}
    <div class="elastic-container">
      <div class="full">

        <article class="{{post_class}}">
          {{> 'post-header'}}
          {{content}}
          {{#if tags}}
          <p>Tags: {{tags}}</p>
          {{/if}}
        </article>

      </div>

      <div class="elastic">
        {{#prev_post}}
        <div class="nav">
          <a href="{{page_url prev}}">&larr; Newer</a>
        </div>
        {{/prev_post}}
        {{#next_post}}
        <div class="nav">
          <a href="{{page_url next}}">Older &rarr;</a>
        </div>
        {{/next_post}}
      </div>

    </div>
  {{/post}}
